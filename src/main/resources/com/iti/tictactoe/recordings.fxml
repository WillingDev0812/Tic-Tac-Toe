<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="1080.0" prefWidth="1920.0" styleClass="background-style"
            stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.iti.tictactoe.RecordingsController">
    <children>

        <Text fill="WHITE" layoutX="793.0" layoutY="170.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Recordings" wrappingWidth="305.6708984375">
            <font>
                <Font name="Comic Sans MS Bold" size="52.0" />
            </font>
        </Text>
        <ImageView fitHeight="92.0" fitWidth="98.0" layoutX="160.0" layoutY="110.0" onMouseClicked="#onBackImageClick" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/back-button%20(1).png" />  <!--  here -->
            </image>
        </ImageView>
        <Label fx:id="backLabel" layoutX="247.0" layoutY="128.0" onMouseClicked="#onBackImageClick" text="Back" textFill="WHITE">
            <font><Font name="Comic Sans MS Bold" size="40.0" /></font></Label>

        <ScrollPane fx:id="scrollablepane" layoutX="506.0" layoutY="242.0" opacity="0.2" prefHeight="754.0" prefWidth="909.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
            </content>
        </ScrollPane>
        <Button fx:id="playRecordingButton" alignment="CENTER" layoutX="160.0" layoutY="838.0"
                onAction="#onPlayRecordingButton" prefHeight="75.0" styleClass="playrecording-button"
                stylesheets="@styles.css" text="Play Recording" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Comic Sans MS Bold" size="25.0" />
            </font>
        </Button>
        <Button fx:id="deleteRecordingButton" alignment="CENTER" layoutX="1468.0" layoutY="875.0"
                onAction="#onDeleteRecordingButton" prefHeight="75.0" styleClass="deleterecording-button"
                stylesheets="@styles.css" text="Delete Recording" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Comic Sans MS Bold" size="30.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
