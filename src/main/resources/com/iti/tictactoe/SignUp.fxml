<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="1080.0" prefWidth="1920.0" styleClass="background-style" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iti.tictactoe.auth.SignUp">
    <children>
        <Text fill="WHITE" layoutX="756.0" layoutY="204.0" strokeType="OUTSIDE" text="Signup to play online" textAlignment="CENTER">
            <font>
                <Font name="Comic Sans MS Bold" size="44.0" />
            </font>
        </Text>

        <ImageView fitHeight="92.0" fitWidth="98.0" layoutX="160.0" layoutY="110.0" onMouseClicked="#onBackImageClick" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/back-button (1).png" />
            </image>
        </ImageView>

        <Label fx:id="backLabel" layoutX="247.0" layoutY="128.0" onMouseClicked="#onBackImageClick" text="Back" textFill="WHITE">
            <font>
                <Font name="Comic Sans MS Bold" size="40.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" layoutX="636.0" layoutY="316.0" opacity="0.5" prefHeight="61.0" prefWidth="649.0" promptText=" Enter Username" style="-fx-background-radius: 30;">
            <font>
                <Font name="Comic Sans MS" size="19.0" />
            </font>
        </TextField>

        <TextField fx:id="emailField" layoutX="636.0" layoutY="416.0" opacity="0.5" prefHeight="61.0" prefWidth="649.0" promptText=" Enter your Email" style="-fx-background-radius: 30;">
            <font>
                <Font name="Comic Sans MS" size="19.0" />
            </font>
        </TextField>

        <PasswordField fx:id="passwordField" layoutX="636.0" layoutY="516.0" opacity="0.5" prefHeight="61.0" prefWidth="649.0" promptText=" Enter Password" style="-fx-background-radius: 30;">
            <font>
                <Font name="Comic Sans MS" size="19.0" />
            </font>
        </PasswordField>

        <PasswordField fx:id="confirmPasswordField" layoutX="636.0" layoutY="616.0" opacity="0.5" prefHeight="61.0" prefWidth="649.0" promptText=" Confirm Password" style="-fx-background-radius: 30;">
            <font>
                <Font name="Comic Sans MS" size="19.0" />
            </font>
        </PasswordField>

        <Label fx:id="passwordFeedbackLabel" layoutX="869.0" layoutY="684.0" prefHeight="25.0" prefWidth="1500.0" textAlignment="CENTER" textFill="RED">

            <font>
                <Font name="Comic Sans MS" size="18.0" />
            </font>
        </Label>

        <Button fx:id="signupBtn" layoutX="880.0" layoutY="748.0" onAction="#handleSignUp" styleClass="signup-button" stylesheets="@styles.css" text="Sign up" />

        <Label fx:id="warningTextlabel" alignment="CENTER" layoutX="405.0" layoutY="696.0" opacity="0.0" prefHeight="25.0" prefWidth="1135.0" styleClass="warninglabel" stylesheets="styles.css" text="Don't leave empty fields" textAlignment="CENTER" textFill="RED">
            <font>
                <Font name="Comic Sans MS" size="18.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
