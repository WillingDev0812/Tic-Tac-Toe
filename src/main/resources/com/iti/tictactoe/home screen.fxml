<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1080" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iti.tictactoe.HomeScreen">
   <children>
      <ImageView fx:id="main_background_img" fitHeight="1080" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assest/test.png" />
         </image>
      </ImageView>
      <Button fx:id="startplayingbtn" onAction="#onplaybtn" alignment="CENTER" layoutX="600.0" layoutY="400.0" prefHeight="89.0" prefWidth="463.0" styleClass="startbtn" stylesheets="@styles.css" text="Start playing" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS Bold" size="38.0" />
         </font>
      </Button>
      <Button fx:id="quitbtn" onAction="#onquitbtn"  alignment="CENTER" layoutX="600.0" layoutY="525.0" prefHeight="89.0" prefWidth="463.0" styleClass="quitbtn" stylesheets="@styles.css" text="Quit" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS Bold" size="38.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
